            "beer",
            "feta",
            "olives",
            "coconut milk",
            "curry powder",
            "peanuts",
            "bean sprouts",
            "tamarind",
            "arborio rice",
            "mushrooms",
            "white wine",
            "jerk seasoning",
            "lime",
            "thyme",
            "sweet potatoes",
            "lamb",
            "parsley",
            "black beans",
            "bun",
            "star anise",
            "cilantro",
            "corn",
            "dumpling wrappers",
