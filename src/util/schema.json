{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recipes Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "diet", "cuisine", "time", "ingredients", "nutrition"],
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the dish",
        "minLength": 1,
        "maxLength": 100
      },
      "diet": {
        "type": "string",
        "description": "The dietary category of the dish",
        "enum": ["vegetarian", "vegan", "non-vegetarian", "gluten-free"]
      },
      "cuisine": {
        "type": "string",
        "description": "The cuisine type of the dish",
        "enum": [
          "Italian",
          "Indian",
          "Fusion",
          "Mexican",
          "American",
          "Middle Eastern",
          "Chinese",
          "Japanese",
          "British",
          "Korean",
          "Thai",
          "Greek",
          "Jamaican",
          "Vietnamese",
          "French",
          "Spanish",
          "Russian",
          "Hawaiian",
          "Filipino",
          "Moroccan",
          "Mediterranean",
          "Latin American"
        ]
      },
      "time": {
        "type": "integer",
        "description": "Preparation time in minutes",
        "minimum": 5,
        "maximum": 240
      },
      "ingredients": {
        "type": "array",
        "description": "List of ingredients used in the dish",
        "minItems": 3,
        "maxItems": 10,
        "items": {
          "type": "string",
          "enum": [
            "pizza dough",
            "tomato sauce",
            "mozzarella",
            "basil",
            "olive oil",
            "quinoa",
            "chickpeas",
            "avocado",
            "spinach",
            "carrots",
            "tahini",
            "chicken",
            "yogurt",
            "tomatoes",
            "onion",
            "garam masala",
            "cream",
            "gluten-free flour",
            "eggs",
            "milk",
            "maple syrup",
            "butter",
            "beef",
            "tortillas",
            "lettuce",
            "cheddar",
            "salsa",
            "tomato",
            "balsamic vinegar",
            "lentils",
            "celery",
            "cumin",
            "garlic",
            "paneer",
            "spices",
            "shrimp",
            "broccoli",
            "soy sauce",
            "ginger",
            "bell peppers",
            "gluten-free pasta",
            "zucchini",
            "parmesan",
            "falafel",
            "pita bread",
            "hummus",
            "salmon",
            "lemon",
            "dill",
            "salt",
            "pepper",
            "flour",
            "oil",
            "bread",
            "sushi rice",
            "nori",
            "cucumber",
            "paprika",
            "brown sugar",
            "pork ribs",
            "bbq sauce",
            "lasagna noodles",
            "ricotta",
            "cod",
